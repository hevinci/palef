body.home
  main
    display flex
    flex-flow row wrap
    box-sizing border-box
    width 100%
    padding 2.5% 1.5%

body.chapter, body.quiz
  main
    box-sizing border-box
    max-width 940px
    padding $gutterSmall $gutterLarge
    margin 0 auto
    background-color $white

body.chapter
  main
    h2
      margin $gutterSmall 0 $gutterLarge 0
      font-size $textLarge
      font-weight normal
      color $whiteBgSecondaryText
    p
      margin 0 0 $textLarge 0
      text-indent $gutterSmall
      text-align justify
    img
      display block
      width 100%
      max-width 540px
      height 100%
      max-height 360px
      margin 0 auto $gutterLarge auto
    video
      display block
      width 100%
      height 100%
      margin-bottom 54px // tmp...
    video::-webkit-media-controls-panel// tmp...
      top 38px
      width 100%

body.quiz
  background-color $white
  main
    display flex
    flex-flow column wrap
    align-items center
    max-width 500px
    padding 0
    ul
      display flex
      flex-flow row wrap
      box-sizing border-box
      margin-bottom 0
      padding $gutterLarger
      list-style-type none
      li
        width 100%
        label
          display flex
          input
            flex-shrink 0
            margin-right $gutterSmall
        label:hover
          cursor pointer
      li + li
        margin-top $gutterSmall
    div.icon-tick
      display block

@media all and (min-width: 600px)
  body.chapter
    main
      width 90%
      padding 2% 4%
      border-left solid 1px $hueLight
      border-right solid 1px $hueLight
  body.quiz
    background-color $hueLightest
    main
      width 80%
      max-width 540px
      min-height 230px
      margin-top 5%
      padding 2% 4%
      border solid 1px $hueLight
      border-radius 4px

@media all and (min-width: 900px)
  body.chapter
    main
      width 80%
      padding 3% 6%
  body.quiz
    main
      width 60%
  body.chapter
    main
      img
        margin $gutterLarge auto $gutterLarger auto