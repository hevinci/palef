@font-face
  font-family "Source sans pro"
  // best supported format; avoid storing 4 font files in app cache
  src url("font/sourcesanspro-light.woff")

body
  padding 0
  margin 0
  background-color $white
  font-family "Source sans pro", Helvetica, Arial, Sans-Serif

video
  display block
  width 90%
  margin auto

.hidden
  display none

.invisible
  visibility hidden