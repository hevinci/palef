<!doctype html>
<html lang="fr">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Admin</title>
  <meta name="description" content="Plateforme d'amélioration de la maîtrise de la langue française">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="css/admin.css">
</head>
<body>
  <section>
    <h1>Progression</h1>
    <table>
      <thead>
        <tr>
          <th>Module</th>
          <th>Complet</th>
          <th>Score</th>
        </tr>
      </thead>
      <tbody>
        {{~ it.stats.modules :module }}
          <tr>
            <td>{{= module.id }}</td>
            <td>{{? module.completedSteps !== module.stepCount }}non{{??}}oui{{?}}</td>
            <td>{{? module.score !== null }}{{= module.score }}/{{= module.max }}{{??}}-{{?}}</td>
          </tr>
        {{~}}
      </tbody>
    </table>
  </section>
  <section>
    <h1>Progression (détails)</h1>
    <table>
      <thead>
        <tr>
          <th>Module</th>
          <th>Étape</th>
          <th>Complète</th>
          <th>Score</th>
        </tr>
      </thead>
      <tbody>
        {{~ it.stats.modules :module }}
          {{~ module.steps :step }}
            <tr>
              <td>{{= module.id }}</td>
              <td>{{= step.id }}</td>
              <td>{{? step.complete === false }}non{{??}}oui{{?}}</td>
              <td>{{? step.score !== null }}{{= step.score }}/{{= step.max }}{{??}}-{{?}}</td>
            </tr>
          {{~}}
        {{~}}
      </tbody>
    </table>
  </section>
  {{~ it.traces :value:index }}
  <section>
    <h1>Traces</h1>
    <table>
      <thead>
        <tr>
          <th>Module</th>
          <th>Étape</th>
          <th>Type</th>
          <th>Complète</th>
          <th>Score</th>
          <th>Temps</th>
        </tr>
      </thead>
      <tbody>
        {{~ it.traces :value:index }}
        <tr>
          <td>{{= value.module }}</td>
          <td>{{= value.step }}</td>
          <td>{{= value.type }}</td>
          <td>{{? value.complete === false }}non{{??}}oui{{?}}</td>
          <td>{{? value.score !== null }}{{= value.score }}{{??}}-{{?}}</td>
          <td>{{= value.time }}</td>
        </tr>
        {{~}}
      </tbody>
    </table>
  </section>
</body>
</html>
